{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext"
        ],
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "src/jsx",
        "baseUrl": ".",
    },
    "include": [
        "@girs",
        "src/**/*",
        "index.ts"
    ]
}
